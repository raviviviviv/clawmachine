#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(0x27, 20, 4);


#define ena 10
#define in1 8
#define in2 9
#define button 2
#define right  4
#define left  5
#define up  7
#define down  6




void setup() {
  // put your setup code here, to run once:
  lcd.init();
  lcd.backlight();
  pinMode(right, INPUT_PULLUP);
  pinMode(left, INPUT_PULLUP);
  pinMode(up, INPUT_PULLUP);
  pinMode(down, INPUT_PULLUP);
  pinMode(ena, OUTPUT);
  pinMode(in1, OUTPUT);
  pinMode(in2, OUTPUT);
 pinMode(button, INPUT_PULLUP);
  Serial.begin(9600);
}

void loop() {
  // put your main code here, to run repeatedly:

 // attachInterrupt(digitalPinToInterrupt(button)), lcd.print("start  "), FALLING );






  switch (getpos()) {
    case 1:  //up
      moveup();
      break;
    case 2:  //down
      movedown();
      break;

    case 3:  //right
      moveright();
      break;
    case 4:  //left
             //Serial.println("case4");
      moveleft();
      break;
    case 5:  //center
      //Serial.println("case5");
     idle();
      break;
    default:
      analogWrite(ena, 0);
      break;
  }
}


int getpos() {

  if (digitalRead(up) == 0) {
    return 1;
  } else if (digitalRead(down) == 0) {
    return 2;
  } else if (digitalRead(left) == 0) {
    return 3;
  } else if (digitalRead(right) == 0) {
    return 4;
  } else {
    return 5;
  }
}

void moveright() {
  analogWrite(ena, 255);
  digitalWrite(in1, 0);
  digitalWrite(in2, 1);

  lcd.setCursor(0, 0);
  lcd.print("right  ");
}

void moveleft() {

  analogWrite(ena, 255);
  digitalWrite(in1, 1);
  digitalWrite(in2, 0);
  lcd.setCursor(0, 0);
  lcd.print("left  ");
}

void moveup() {
  Serial.println("case 1");
  lcd.setCursor(0, 0);
  lcd.print("up  ");
}
void movedown() {
  Serial.println("case2");
  lcd.setCursor(0, 0);
  lcd.print("down  ");
}

void idle(){
  animation_1();

}

